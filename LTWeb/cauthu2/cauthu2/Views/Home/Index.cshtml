@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@model IEnumerable<Cauthu>
<div class="product-active owl-carousel owl-loaded owl-drag">
    <div class="owl-stage-outer">
        <div class="owl-stage" style="transform: translate3d(-1180px, 0px, 0px); transition: all 0s ease 0s; width: 3776px;">
            @foreach (var item in Model)
            {
                <div class="owl-item cloned" style="width: 236px;">
                    <div class="col-lg-12">
                        <!-- single-product-wrap start -->
                        <div class="single-product-wrap">
                            <div class="product-image">
                                <a>
                                    <img src="ImagesBongDa/@item.Anh" alt="Ảnh cầu thủ">
                                </a>
                            </div>
                            <div class="product_desc">
                                <div class="product_desc_info">
                                    <div class="product-review">
                                        <h5 class="manufacturer">
                                            <a href="shop-left-sidebar.html">@item.HoVaTen</a>
                                        </h5>
                                    </div>
                                    <h4><a class="product_name" href="single-product.html">@item.CauLacBo</a></h4>
                                </div>
                            </div>
                        </div>
                        <!-- single-product-wrap end -->
                    </div>
                </div>
            }
        </div>
    </div>
</div>
